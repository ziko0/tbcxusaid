// card.json მონაცემების წამოღება

document.addEventListener("DOMContentLoaded", function() {
    // replace data.json with path to your JSON file
    fetch("cars.json")
        .then(response => response.json())
        .then(data => generateCards(data))
        .catch(error => console.error("error fetching data:", error))
});

function generateCards(data){
    const cardGrid = document.getElementById("cardsGrid");

    data.forEach((item, index) => {
        const card = document.createElement("div");
        card.classList.add("card");
        card.innerHTML = `
        <img src="${item.image}" alt="card image">
        <div class="card__content">
            <h1 class="card__title">${item.title}</h1>
            <span class="card__registration">${item.registration}</span>
        </div>
        <a href="${item.lin}" class="card__datails"></a>
        `;
        cardGrid.appendChild(card)
    })
}

